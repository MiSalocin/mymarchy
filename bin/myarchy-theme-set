#!/bin/bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: myarchy-theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/myarchy/themes/"
CURRENT_THEME_DIR="$HOME/.config/myarchy/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
myarchy-theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  myarchy-restart-waybar
fi
myarchy-restart-swayosd
myarchy-restart-terminal
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, vscode, cursor themes
myarchy-theme-set-gnome
myarchy-theme-set-vscode
myarchy-theme-set-cursor

# Call hook on theme set
myarchy-hook theme-set "$THEME_NAME"
