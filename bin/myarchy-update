#!/bin/bash

set -e

trap 'echo ""; echo -e "\033[0;31mSomething went wrong during the update!\n\nPlease review the output above carefully, correct the error, and retry the update.\n\nIf you need assistance, get help from the community at https://myarchy.org/discord\033[0m"' ERR

if myarchy-update-confirm; then
  myarchy-snapshot create || [ $? -eq 127 ]
  myarchy-update-git
  myarchy-update-perform
fi
