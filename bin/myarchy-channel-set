#!/bin/bash

if (($# == 0)); then
  echo "Usage: myarchy-channel-set [stable|edge|dev]"
  exit 1
else
  channel="$1"
fi

case "$channel" in
"stable") myarchy-branch-set "master" && myarchy-refresh-pacman "stable" ;;
"edge") myarchy-branch-set "master" && myarchy-refresh-pacman "edge" ;;
"dev") myarchy-branch-set "dev" && myarchy-refresh-pacman "edge" ;;
*) echo "Unknown channel: $channel"; exit 1; ;;
esac
